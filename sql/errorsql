lock table tasks write;

select @myLeft := lft from tasks where task_id = '52';

update tasks set rgt = rgt + 2 where rgt > @myLeft

update tasks set lft = lft + 2 where lft > @myLeft

insert into tasks

(lft, rgt, parent_id, business_id, project_id, task_type_id, status_id, start_date, internal_deadline, client_deadline, name, notes, task_created_by) 

values (@myLeft+1, @myLeft+2, '0', 0, '0', '0', '1970-01-01', '1970-01-01', '1970-01-01', 'another', '', '1', 